{
  // ðŸ’… Formato automÃ¡tico y estilo del cÃ³digo
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.autoSave": "onWindowChange",

  // ðŸ§© Terminal predeterminada
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  // ðŸ“œ Habilita ESLint y Prettier para JavaScript/React
  "eslint.format.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // ðŸ§° Oculta archivos que no necesitas ver en el explorador
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },

  // ðŸª¶ Activa resaltado de variables de entorno (.env)
  "files.associations": {
    "*.env": "dotenv"
  }
}
